<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_menu_item_height"
    android:focusable="false"
    android:paddingEnd="@dimen/navigation_menu_item_padding"
    android:paddingLeft="@dimen/navigation_menu_item_padding"
    android:paddingRight="@dimen/navigation_menu_item_padding"
    android:paddingStart="@dimen/navigation_menu_item_padding">

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_item_height"
        android:layout_toLeftOf="@+id/arrow_iv"
        android:layout_toStartOf="@+id/arrow_iv"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/navigation_menu_item_color"
        android:textSize="@dimen/navigation_menu_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_line"
        android:layout_below="@+id/name_tv"
        android:background="@color/navigation_menu_line_color"
        android:focusable="false" />

</RelativeLayout>
