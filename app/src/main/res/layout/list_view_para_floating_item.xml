<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/floating_detail_width"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/para_key_tv"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/para_item_margin"
        android:textSize="@dimen/para_item_title_size"/>
    <TextView
        android:id="@+id/para_value_tv"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/para_item_margin"
        android:textSize="@dimen/para_item_title_size"/>
</LinearLayout>