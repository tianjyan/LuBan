<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_item_height"
        android:background="@drawable/common_card_background"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/action_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_selector"
            android:clickable="true">

            <TextView
                android:id="@+id/action_delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_delete"
                android:drawablePadding="@dimen/action_item_drawable_padding"
                android:gravity="center_vertical"
                android:text="@string/delete"
                android:textColor="@color/action_item_dark_red"
                android:textSize="@dimen/action_item_text_size" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/action_item_line"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/action_item_margin"
            android:layout_marginTop="@dimen/action_item_margin"
            android:background="@color/action_item_line" />

        <RelativeLayout
            android:id="@+id/action_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_selector"
            android:clickable="true">

            <TextView
                android:id="@+id/action_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_save"
                android:drawablePadding="@dimen/action_item_drawable_padding"
                android:gravity="center_vertical"
                android:text="@string/save"
                android:textColor="@color/action_item_title"
                android:textSize="@dimen/action_item_text_size" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/action_item_line"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/action_item_margin"
            android:layout_marginTop="@dimen/action_item_margin"
            android:background="@color/action_item_line" />

        <RelativeLayout
            android:id="@+id/action_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_selector"
            android:clickable="true">

            <TextView
                android:id="@+id/action_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_play"
                android:drawablePadding="@dimen/action_item_drawable_padding"
                android:gravity="center_vertical"
                android:text="@string/start"
                android:textColor="@color/action_item_green"
                android:textSize="@dimen/action_item_text_size" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/para_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
